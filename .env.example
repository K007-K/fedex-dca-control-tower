# ===========================================
# FedEx DCA Control Tower - Environment Config
# ===========================================
# Copy this file to .env.local and fill in values

# ===========================================
# SUPABASE CONFIGURATION
# ===========================================
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ===========================================
# APPLICATION SETTINGS
# ===========================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="FedEx DCA Control Tower"

# ===========================================
# AI SERVICE (Python FastAPI)
# ===========================================
AI_SERVICE_URL=http://localhost:8000
AI_SERVICE_API_KEY=your_ai_service_api_key

# ===========================================
# EXTERNAL INTEGRATIONS (Optional)
# ===========================================
# Email Service (SendGrid)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@fedex-dca.com

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ===========================================
# SECURITY
# ===========================================
# JWT secret for additional token signing (if needed beyond Supabase)
JWT_SECRET=your_very_long_random_secret_key_here

# Service-to-Service Authentication
# Used for SYSTEM actor authentication (automated services, cron jobs)
# Generate with: openssl rand -base64 32
SERVICE_SECRET=your_secure_service_secret_min_32_chars

# Session configuration
SESSION_MAX_AGE=86400

# ===========================================
# FEATURE FLAGS
# ===========================================
NEXT_PUBLIC_ENABLE_AI_SCORING=true
NEXT_PUBLIC_ENABLE_REALTIME=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# ===========================================
# DEVELOPMENT
# ===========================================
# Set to 'development', 'staging', or 'production'
NODE_ENV=development
